<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="168dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="283dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="184dp"
            android:layout_height="38dp"
            android:layout_marginVertical="29dp"
            android:layout_marginLeft="23dp"
            android:background="#C2AEE3"
            android:text="I'm a Patient" />

        <Button
            android:id="@+id/button2"
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="50dp"
            android:background="#6CE6E3"
            android:text="I'm a DRIVER" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="527dp"
        android:includeFontPadding="true"
        android:text="Ambulance Tracking app"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="196dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="496dp"
        android:text="Track Ambulance (24X7)" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="290dp"
        android:layout_marginBottom="588dp"
        app:srcCompat="@drawable/ic_baseline_local_hospital_24" />
</RelativeLayout>